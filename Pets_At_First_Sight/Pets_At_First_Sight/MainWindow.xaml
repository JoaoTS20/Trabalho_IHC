<Window x:Class="Pets_At_First_Sight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pets_At_First_Sight"
        mc:Ignorable="d"
        Title="MainWindow" Height="667" Width="375">
    <Grid>
        <TabControl TabStripPlacement="Bottom">
            <TabItem x:Name="Inicio" Header="Início" >
                <Frame Source="Inicio.xaml"></Frame>
            </TabItem>
            <TabItem Header="Favoritos">
                <Frame Source="Favoritos.xaml"></Frame>
            </TabItem>
            <TabItem Header="Adoções">
                <Frame Source="Adocoes.xaml"></Frame>
            </TabItem>
            <TabItem Header="Loja">
                <Frame Source="Loja.xaml"></Frame>
            </TabItem>
            
            <TabItem Header="Perfil">
                <Frame Source="Perfil.xaml"></Frame>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
