                    </TabItem.Content>
                </TabItem>

                <TabItem Height="40" Width="85" MaxWidth="100">
                    <TabItem.Header>
                        <Image Source="Icons/perfil_tab.png" Height="35" Width="61"></Image>
                    </TabItem.Header>
                    <TabItem.Content>
