<Page x:Class="Pets_At_First_Sight.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pets_At_First_Sight"
      mc:Ignorable="d" 
      d:DesignHeight="667" d:DesignWidth="375"
      Title="Post"
      WindowHeight="667"
      WindowWidth="375"
      Background="#DCE3E7">
    <!-- Main grid here -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <!-- First grid, the one that will have the photo and the first 4 boxes -->
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Width="187" Grid.Column="1">
                <Label Style="{StaticResource LabelPostSmall}" Margin="2,7,2,0" Width="78" Height="Auto" Content="Espécie:"/>
                <ComboBox x:Name="EspecieAnimal" Style="{StaticResource ComboBoxPost}" Margin="2,15,2,-1" >
                    <ComboBoxItem IsSelected="True" Content="Cão"/>
                    <ComboBoxItem Content="Gato"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,32" Grid.RowSpan="2" Width="187">
                <Label Style="{StaticResource LabelPostSmall}" Height="Auto" Margin="2,14,2,10" Width="82">Nome:</Label>
                <TextBox Height="30" Width="98" x:Name="NomeAnimal" Margin="0,14" />
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Style="{StaticResource LabelPostSmall}">Idade:</Label>
                <ComboBox Name="IdadeAnimal" Style="{StaticResource ComboBoxPost}" >
                    <ComboBoxItem>Indefinida</ComboBoxItem>
                    <ComboBoxItem>menos de 1</ComboBoxItem>
                    <ComboBoxItem>1</ComboBoxItem>
                    <ComboBoxItem>2</ComboBoxItem>
                    <ComboBoxItem>3</ComboBoxItem>
                    <ComboBoxItem>4</ComboBoxItem>
                    <ComboBoxItem>5</ComboBoxItem>
                    <ComboBoxItem>5+</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left">
                <Label Style="{StaticResource LabelPostSmall}">Género:</Label>
                <ComboBox Name="GeneroAnimal" Style="{StaticResource ComboBoxPost}" >
                    <ComboBoxItem>Masculino</ComboBoxItem>
                    <ComboBoxItem>Feminino</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <Image Name="InputImage" Grid.Column ="0"  Grid.Row="1"  HorizontalAlignment="Left" Height="120" Margin="33,33,0,0" VerticalAlignment="Top" Width="120"/>
            <Button HorizontalAlignment="Left" Height="20" Width="20" Grid.Column="0" Grid.Row="4" Click="BtnLoadFromFile_Click">+</Button>
        </Grid>
        <!-- Second grid, the one with the last 4 boxes -->
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Style="{StaticResource LabelPostBig}">Tipo doador:</Label>
                <ComboBox Name="TipoDoador"  Style="{StaticResource ComboBoxPost}" >
                    <ComboBoxItem IsSelected="True">Abrigo</ComboBoxItem>
                    <ComboBoxItem>Particular</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Style="{StaticResource LabelPostBig}">Nome doador:</Label>
                <TextBox Height="30" Width="100" Name="NomeDoador" />
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Style="{StaticResource LabelPostBig}">Vacinas:</Label>
                <ComboBox Name="Vacinas"  Style="{StaticResource ComboBoxPost}" >
                    <ComboBoxItem>Sim</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">Não</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Style="{StaticResource LabelPostBig}">Chip:</Label>
                <ComboBox Name="Chip"  Style="{StaticResource ComboBoxPost}" >
                    <ComboBoxItem>Sim</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">Não</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Grid>
        <!-- Third grid, it contains the pst textbox and the submit button -->
        <Grid Grid.Column="0" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border Grid.Column="0" Grid.Row="0" VerticalAlignment="Bottom" Height="75" Width="300" BorderThickness="1"  BorderBrush="#FF000000">
                <TextBox Height="75" Width="300" Name="PostTexto" AcceptsReturn="True" TextWrapping="Wrap" Text="Insira aqui o seu texto" GotFocus="TextBox_GotFocus" TextAlignment="Center" VerticalContentAlignment="Center"/>
            </Border>
            <Button Name="SubmeterPost" Grid.Column="0" Grid.Row="1" Style="{StaticResource ButtonStyle}" Click="ButtonSubmeter_Click">Submeter Post</Button>
        </Grid>

    </Grid>

</Page>
