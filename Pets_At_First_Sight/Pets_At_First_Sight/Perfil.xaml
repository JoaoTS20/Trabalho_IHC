<Page x:Class="Pets_At_First_Sight.Perfil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pets_At_First_Sight"
      mc:Ignorable="d" 
      d:DesignHeight="667" d:DesignWidth="375"
      Title="Perfil" 
      WindowHeight="667"
      WindowWidth="375"
      Background="#FEFAE0">
    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Width="150" Height="150" BorderThickness="1"  BorderBrush="#FF000000">
            <Image Grid.Row="0" Source="Imagens\ImgPerfil.jpg" Width="150" Height="150" />
        </Border>
        <Label Content="M0dernCaty0ga" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="15"/>
        <Button Grid.Column="1" Grid.Row="1" Name="Mais_Info" Content="Mais Informações" Style="{StaticResource ButtonStyle}" />
        <Button Grid.Row="2" Name="Criar_Post" Content="Criar Novo Post" Style="{StaticResource ButtonStyle}" />
        <Button Grid.Column="1" Grid.Row="3" Name="Posts" Content="Posts" Style="{StaticResource ButtonStyle}" />
        


    </Grid>
</Page>
